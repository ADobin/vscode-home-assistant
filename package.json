{
	"name": "vscode-home-assistant",
	"displayName": "vscode-home-assistant",
    "description": " IntelliSense for entity-id's in Home Assistant Configurations",
    "version": "0.1.0",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
    "publisher": "keesschollaart", 
    "repository": {
        "type": "git",
        "url": "https://github.com/keesschollaart81/home-assistant-vscode-extension"
	},
    "license": "MIT",
    "icon": "assets/logo.png",
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42",
		"@types/ws": "6.0.1"
	},
	"dependencies": {
		"@types/node": "^10.12.21",
		"home-assistant-js-websocket": "3.3.0",
		"ws": "6.2.0",
		"isomorphic-ws":"4.0.1" 
	}
}