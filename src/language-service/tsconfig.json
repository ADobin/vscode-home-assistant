{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "rootDir": "src",
    "skipLibCheck": true /* todo: remove when WebSocket error is solved*/,
    "lib": ["es6"],
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"]
}
