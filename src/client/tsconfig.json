{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
	"skipLibCheck": true, /* todo: remove when WebSocket error is solved*/
	"composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
